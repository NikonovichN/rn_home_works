{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@styles": ["./src/core/styles/index"],
      "@components": ["./src/components/index"],
      "@icons": ["./src/assets/icons/index"],
      "@pages": ["./src/pages/index"],
      "@selectors": ["./src/core/selectors/index"],
      "@hooks": ["./src/core/hooks/index"],
      "@actions": ["./src/core/actions/index"],
      "@navigation": ["./src/core/navigation/index"],
      "@network": ["./src/core/network/index"],
      "@utils": ["./src/core/utils/index"],
      "@constants": ["./src/core/constants/index"],
      "@entities": ["./src/core/entities/index"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "typeRoots": ["./src/core/types"],
}